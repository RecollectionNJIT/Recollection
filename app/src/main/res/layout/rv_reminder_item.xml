<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/tvReminderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Reminder Title"
            android:textColor="@color/teal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="15dp" />

        <!-- Description TextView (limited to 1 line) -->
        <TextView
            android:id="@+id/tvReminderDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvReminderTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Reminder description goes here."
            android:textColor="@color/teal"
            android:textSize="16sp"
            android:padding="8dp" />

        <!-- Date TextView -->
        <TextView
            android:id="@+id/tvReminderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvReminderDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="January 2023"
            android:textColor="@color/teal"
            android:textSize="16sp"
            android:padding="8dp" />

        <!-- Time TextView -->
        <TextView
            android:id="@+id/tvReminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvReminderDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="12:00 PM"
            android:textColor="@color/teal"
            android:textSize="16sp"
            android:padding="8dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
