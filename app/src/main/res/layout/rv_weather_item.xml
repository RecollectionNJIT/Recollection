<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:padding="5dp"
    android:background="@color/white"  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/rvWeatherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/teal"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/rvWeatherTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvWeatherName"
            android:text="Temperature"
            android:layout_centerInParent="true"
            android:textColor="@color/teal"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/rvWeatherPicture"
            android:layout_below="@id/rvWeatherTemperature"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="@color/teal" />
    </RelativeLayout>

    <!--<TextView
        android:id="@+id/rvWeatherForecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forecast"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvWeatherTemperature" />-->
</androidx.constraintlayout.widget.ConstraintLayout>