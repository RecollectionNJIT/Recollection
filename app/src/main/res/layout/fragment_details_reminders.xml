<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    android:layout_margin="16dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/tvReminderTitleDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Reminder Title"
        android:textColor="@color/teal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="15dp" />

    <!-- Description TextView -->
    <TextView
        android:id="@+id/tvReminderDescriptionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvReminderTitleDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Reminder description goes here."
        android:textColor="@color/teal"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Date TextView -->
    <TextView
        android:id="@+id/tvReminderDateDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvReminderDescriptionDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="January 2023"
        android:textColor="@color/teal"
        android:textSize="16sp"
        android:padding="8dp" />



</RelativeLayout>
</androidx.cardview.widget.CardView>
