<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFinancesFragment"
    android:background="@color/teal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvFinanceDetailsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alltime Expenses"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:transitionName="header"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/detailsPieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFinanceDetailsHeader" />

        <LinearLayout
            android:id="@+id/detailsPieChartLegend1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsPieChart">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="Rent"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableLeftCompat="@drawable/add_outline_circle"
                app:drawableTint="@color/burgandy" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="Groceries"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableLeftCompat="@drawable/add_outline_circle"
                app:drawableTint="@color/lime" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="Dining"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableLeftCompat="@drawable/add_outline_circle"
                app:drawableTint="@color/metallic_gold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detailsPieChartLegend2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsPieChartLegend1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="Bills"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableLeftCompat="@drawable/add_outline_circle"
                app:drawableTint="@color/magenta_haze" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="Entertainment"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableLeftCompat="@drawable/add_outline_circle"
                app:drawableTint="@color/fuchsia" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="Other"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableLeftCompat="@drawable/add_outline_circle"
                app:drawableTint="@color/dark_olive_green" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/financeEntryTableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsPieChartLegend2">

            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="337dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:scrollbars="none"
                android:fillViewport="false"
                android:layout_marginBottom="10dp">
                    <TableLayout
                        android:id="@+id/financeEntryTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:isScrollContainer="true">

                        <TableRow
                            android:id="@+id/tableHeaders"
                            android:background="@color/dark_teal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Date"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Type"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Category"
                                android:textColor="@color/white"
                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Amount"
                                android:textColor="@color/white"
                                android:textSize="18dp" />
                        </TableRow>
                    </TableLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>